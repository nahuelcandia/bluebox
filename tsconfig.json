{
  "compilerOptions": {
    "target": "ES2022",                                
    "module": "commonjs",                              
    "resolveJsonModule": true,                       
    "outDir": "dist",                                 
    "esModuleInterop": true,                            
    "strict": true,                                     
    "skipLibCheck": true, 
    "sourceMap": true, 
    "moduleResolution": "node",
    "preserveConstEnums": true,
  },
  "include": ["./src"],
  "exclude": ["./dist", "**/*.test.ts", "**/*.e2e.ts"]
}
